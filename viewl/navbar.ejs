<style>
  .search-btn {
   background-color: #546de5;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .search-btn:hover {
    background-color:#2d3aa0;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold d-flex align-items-center" href="/listings" style="font-size: 1.5rem; color: #3e52b5;">
  <i class="fa-regular fa-compass me-2" style="color: #546de5;"></i> Travel Mind
</a>


    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      
      
      <div class="navbar-nav">
        <a class="nav-link" href="/listings"><b>Explore</b></a>
        <a class="nav-link" href="/listings/plantrip"><b>Plan Trip</b></a>
      </div>

      
      <div class="navbar-nav ms-auto me-auto">
        <form class="d-flex" role="search" action="/listings/search">
          <input class="form-control me-2 search-inp" type="search" name="query" placeholder="Search destination" aria-label="Search">
          <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>

      
      <div class="navbar-nav ms-auto">
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/login"><b>Log In</b></a>
        <% } else { %>
          <% if (currUser.userType === "traveler") { %>
            <a class="nav-link" href="/listings/favourite/<%= currUser._id %>"><b>Favourites</b></a>
            <a class="nav-link" href="/listings/paid/<%= currUser._id %>"><b>Your Bookings</b></a>
          <% } else if (currUser.userType === "owner") { %>
            <a class="nav-link" href="/listings/new"><b>List Property</b></a>
            <a class="nav-link" href="/listings/owner/bookings"><b>Bookings</b></a>
          <% } %>
          <a class="nav-link" href="/logout"><b>Log Out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
